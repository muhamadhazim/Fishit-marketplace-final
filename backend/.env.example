MONGODB_URI=mongodb://127.0.0.1:27017/fishit_marketplace
JWT_SECRET=xxxxxx
PORT=4000

# === BREVO SMTP CONFIGURATION ===
# Login SMTP dari Brevo dashboard (Settings > SMTP & API)
BREVO_SMTP_USER=xxxx@smtp-brevo.com

# SMTP Key (Generate di Brevo > Settings > SMTP & API > Generate new SMTP key)
BREVO_SMTP_KEY=xkeysib-your-smtp-key-here

# Email pengirim (HARUS sudah diverifikasi di Brevo!)
# Verifikasi di: https://app.brevo.com/settings/senders
BREVO_SENDER_EMAIL=xxxxxx@gmail.com
BREVO_API_KEY=xxxxxx

# === IPAYMU CONFIGURATION ===
# Dapatkan VA dan API Key dari menu Integrasi di dashboard iPaymu
# Sandbox: https://sandbox.ipaymu.com/integrasi
# Production: https://my.ipaymu.com/integrasi
IPAYMU_VA=your_virtual_account_number
IPAYMU_API_KEY=your_api_key_here
IPAYMU_PRODUCTION=false

# === APPLICATION URLs ===
# Backend URL (for iPaymu callback/webhook)
BACKEND_URL=http://localhost:4000

# Frontend URL (for redirect after payment)
FRONTEND_URL=http://localhost:3000
